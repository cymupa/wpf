<Window x:Class="AdminPanelBeta.Pages.EditUserDataPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminPanelBeta.Pages"
        mc:Ignorable="d"
                   WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="400"
        SizeToContent="Height"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="8" Background="{StaticResource ColorBaseDark}"
            BorderBrush="{StaticResource ColorBlue}"
            BorderThickness="2">
        <StackPanel>
            <Image Height="30"
                   Width="30"
                   HorizontalAlignment="Right"
                   Margin="0,5,5,0"
                   MouseDown="ExitPage"
                   Source="/Images/close_2.png"/>
            <StackPanel x:Name="DataAddUsers">
                <TextBlock Text="Редактирование сотрудника"
                           Style="{StaticResource TextBlockTitleNamePage}"
                           Margin="0"
                           FontSize="20"/>
                <Image
                     Width="140"
                     Height="140"
                     Margin="10,20,10,10"
                     Source="/Images/no_photo.png">
                </Image>
                <UniformGrid Margin="0,5,0,0" Columns="4">
                    <TextBlock Style="{StaticResource TextBlockTitleTextBoxAddAndEdit}"
                         Text="Имя"
                         HorizontalAlignment="Center" Height="20"/>
                    <TextBox Style="{StaticResource TextBoxAddAndEdit}"
                         Text="{Binding Name}"
                         MaxLength="255"/>
                    <TextBlock Style="{StaticResource TextBlockTitleTextBoxAddAndEdit}"
                         Text="Телефон"
                         HorizontalAlignment="Center" Height="20"/>
                    <TextBox Style="{StaticResource TextBoxAddAndEdit}"
                         Text="{Binding Tel}"
                         Margin="0,5,0,5"
                         MaxLength="10"/>
                    <TextBlock Style="{StaticResource TextBlockTitleTextBoxAddAndEdit}"
                         Text="Фамилия"
                         HorizontalAlignment="Center" Height="20"/>
                    <TextBox Style="{StaticResource TextBoxAddAndEdit}"
                         Text="{Binding Surname}"
                         Margin="0,5,0,5"
                         MaxLength="10"/>
                    <TextBlock Style="{StaticResource TextBlockTitleTextBoxAddAndEdit}"
                      Text="Адресс"
                      HorizontalAlignment="Center" Height="20"/>
                    <TextBox Style="{StaticResource TextBoxAddAndEdit}"
                      Text="{Binding Address}"
                      Margin="0,5,0,5"
                      MaxLength="10"/>
                    <TextBlock Style="{StaticResource TextBlockTitleTextBoxAddAndEdit}"
                         Text="Отчество"
                         HorizontalAlignment="Center" Height="20"/>
                    <TextBox Style="{StaticResource TextBoxAddAndEdit}"
                         Text="{Binding Patronymic}"
                         Margin="0,5,0,5"
                         MaxLength="10"/>
                    <TextBlock Style="{StaticResource TextBlockTitleTextBoxAddAndEdit}"
                    Text="Дата рождения"></TextBlock>
                    <DatePicker x:Name="BirthDatePicker"
            Margin="0,5,0,5"
            DisplayDateStart="1900-01-01"
            DisplayDateEnd="2100-01-01"
            SelectedDateFormat="Short"
            SelectedDate="{Binding Birth}"/>
                    <TextBlock Style="{StaticResource TextBlockTitleTextBoxAddAndEdit}"
                         Text="Пароль"
                         HorizontalAlignment="Center" Height="20"/>
                    <TextBox Style="{StaticResource TextBoxAddAndEdit}"
                         Text="{Binding Password}"
                         Margin="0,5,0,5"
                         MaxLength="10"/>
                    <TextBlock Style="{StaticResource TextBlockTitleTextBoxAddAndEdit}"
                         Text="Роль"
                         HorizontalAlignment="Center" Height="20"/>
                    <ComboBox Style="{StaticResource ComboBoxAddAndEdit}"
          x:Name="ComboBoxRole"
          ItemsSource="{Binding RolesList}"
          DisplayMemberPath="Name"
          SelectedValuePath="Id"
          SelectedItem="{Binding SelectedRole}"
          SelectedIndex="0"
          Text="{Binding RoleName, Mode=OneWay}"/>
                </UniformGrid>
                <Button Content="Редактировать"
                        Style="{StaticResource ButtonAddAndEditInWindow}"
                        Width="150"
                        Margin="10,15,10,10"
                        Click="UpdateUser_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
